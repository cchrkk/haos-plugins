{
  "name": "CopyParty",
  "version": "1.0.0",
  "slug": "copyparty",
  "description": "CopyParty - File sharing and synchronization server",
  "url": "https://github.com/9001/copyparty",
  "startup": "application",
  "boot": "auto",
  "arch": ["amd64", "armhf", "armv7", "aarch64"],
  "ingress": true,
  "panel_icon": "mdi:folder-multiple",
  "ingress_port": 8080,
  "ingress_entry": "/",
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Web interface"
  },
  "options": {
    "log_level": "info",
    "shared_folders": ["/share/copyparty/data"],
    "config_folder": "/share/copyparty/config",
    "admin_user": "admin",
    "admin_password": "password"
  },
  "schema": {
    "log_level": "str",
    "shared_folders": "list(str)",
    "config_folder": "str",
    "admin_user": "str",
    "admin_password": "str"
  },
  "image": "copyparty"
}